{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "bundler",
    "lib": [
      "es2019"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolvePackageJsonExports": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__/**"
  ]
}
