{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2015",
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "lib": [
      "dom",
      "es2020"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__data__/**",
    "src/__tests__/**",
    "src/__stories__/**"
  ]
}
